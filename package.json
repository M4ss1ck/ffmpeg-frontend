{
  "name": "ffmpeg-frontend",
  "version": "1.0.1",
  "description": "A user-friendly desktop application for FFmpeg operations",
  "main": "dist/main/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build:electron && npm run build:preload && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:vite && npm run build:electron && npm run build:preload",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder --win --linux",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "ffmpeg",
    "video",
    "converter",
    "desktop"
  ],
  "author": {
    "name": "M4ss1ck"
  },
  "homepage": "https://github.com/M4ss1ck/ffmpeg-frontend",
  "repository": {
    "type": "git",
    "url": "https://github.com/M4ss1ck/ffmpeg-frontend.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.massiffmpeg.app",
    "productName": "massiffmpeg",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main/main/main.js"
    },
    "win": {
      "icon": "assets/icon.svg",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.svg",
      "category": "AudioVideo",
      "target": "AppImage",
      "desktop": {
        "Name": "massiffmpeg",
        "Comment": "A user-friendly desktop application for FFmpeg operations",
        "Categories": "AudioVideo;Video;Audio;",
        "MimeType": "video/mp4;video/avi;video/mkv;video/mov;video/wmv;video/flv;video/webm;audio/mp3;audio/wav;audio/flac;audio/aac;audio/ogg;"
      }
    }
  }
}
