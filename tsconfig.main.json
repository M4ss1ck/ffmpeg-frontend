{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist/main",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/main/**/*", "src/types/**/*"],
  "exclude": ["src/renderer/**/*", "node_modules", "dist"]
}
