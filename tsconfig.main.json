{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/main",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "jsx": "preserve"
  },
  "include": ["src/main/**/*"],
  "exclude": ["src/renderer/**/*", "node_modules", "dist"]
}
