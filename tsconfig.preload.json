{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/preload",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "jsx": "preserve"
  },
  "include": ["src/preload/**/*"],
  "exclude": ["src/main/**/*", "src/renderer/**/*", "node_modules", "dist"]
}
