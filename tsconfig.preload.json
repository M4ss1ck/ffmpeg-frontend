{
  "compilerOptions": {
    "outDir": "dist/preload",
    "rootDir": "src/preload",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": ["src/preload/**/*"],
  "exclude": ["src/main/**/*", "src/renderer/**/*", "node_modules", "dist"]
}
